<?xml version="1.0" encoding="utf-8" ?>
<!---Code written by Prajeet Bohara 
This code file gives UI for the faculty-->
<ContentPage
    x:Class="Dashboard.Pages.FacultyDirectoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Title="Faculty Directory">

    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar -->
        <controls:TopBar Grid.Row="0" />
        
        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="25">
                
                <!-- Page Header -->
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Meet our distinguished faculty and explore their research"
                           FontSize="16"
                           TextColor="Black"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>

                <!-- Featured Professor Section -->
                <Frame BackgroundColor="#1C2028"
                       CornerRadius="12"
                       Padding="25"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="20">
                        
                        <!-- Professor Header -->
                        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                            <!-- Professor Photo -->
                            <Frame BackgroundColor="Black"
                                   CornerRadius="60"
                                   Padding="4"
                                   HasShadow="true">
                                <Image Source="https://kvvoooyijzvxxnejykjv.supabase.co/storage/v1/object/public/images/faculty/1681218400526.jpg"
                                       Aspect="AspectFill"
                                       WidthRequest="120"
                                       HeightRequest="120">
                                    <Image.Clip>
                                        <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60" />
                                    </Image.Clip>
                                </Image>
                            </Frame>
                            
                            <!-- Professor Info -->
                            <VerticalStackLayout Spacing="8" VerticalOptions="Center">
                                <Label Text="Dr. Jennifer Lavergne"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="Assistant Professor"
                                       FontSize="18"
                                       TextColor="#4CAF50"
                                       FontAttributes="Italic" />
                                <Label Text="Computer Science Department"
                                       FontSize="14"
                                       TextColor="#CCCCCC" />
                                <HorizontalStackLayout Spacing="15">
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="📧" FontSize="16" VerticalOptions="Center" />
                                        <Label Text="jlavegne@mcneese.edu"
                                               FontSize="12"
                                               TextColor="#2196F3"
                                               VerticalOptions="Center" />
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- Expand/Collapse Button -->
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Button x:Name="ExpandButton"
                                    Text="View Research Details ▼"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White"
                                    CornerRadius="20"
                                    Padding="20,10"
                                    FontSize="14"
                                    Clicked="OnExpandButtonClicked" />
                        </HorizontalStackLayout>

                        <!-- Expandable Research Information -->
                        <Frame x:Name="ResearchDetailsFrame"
                               BackgroundColor="#2A2F3A"
                               CornerRadius="8"
                               Padding="20"
                               HasShadow="False"
                               IsVisible="False">
                            <VerticalStackLayout Spacing="20">

                                <!-- Research Interests -->
                                <Frame BackgroundColor="#1C2028"
                                       CornerRadius="8"
                                       Padding="15"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="10">
                                        <Label Text="Research Focus"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="• Video Game Development &amp; Mathematics"
                                               FontSize="14"
                                               TextColor="#CCCCCC" />
                                        <Label Text="• Virtual Reality (VR) Technology"
                                               FontSize="14"
                                               TextColor="#CCCCCC" />
                                        <Label Text="• Data Visualization &amp; High-Dimensional Datasets"
                                               FontSize="14"
                                               TextColor="#CCCCCC" />
                                        <Label Text="• Procedural Generation Algorithms"
                                               FontSize="14"
                                               TextColor="#CCCCCC" />
                                        <Label Text="• Interactive Digital Environments"
                                               FontSize="14"
                                               TextColor="#CCCCCC" />
                                    </VerticalStackLayout>
                                </Frame>

                                <!-- Current Research Projects -->
                                <Frame BackgroundColor="#1C2028"
                                       CornerRadius="8"
                                       Padding="15"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="10">
                                        <Label Text="Current Research Projects"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        
                                        <Frame BackgroundColor="#2A2F3A"
                                               CornerRadius="6"
                                               Padding="12"
                                               HasShadow="False">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Virtual Reality Lab Launch"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#4CAF50" />
                                                <Label Text="Currently preparing to launch a new Virtual Reality lab at McNeese State University, aimed at expanding student engagement and advancing meaningful, creative research in immersive digital environments."
                                                       FontSize="12"
                                                       TextColor="#CCCCCC"
                                                       LineBreakMode="WordWrap" />
                                                <Label Text="Institution: McNeese State University | Status: In Development"
                                                       FontSize="10"
                                                       TextColor="#FF9800"
                                                       FontAttributes="Italic" />
                                            </VerticalStackLayout>
                                        </Frame>

                                        <Frame BackgroundColor="#2A2F3A"
                                               CornerRadius="6"
                                               Padding="12"
                                               HasShadow="False">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Procedural Generation in 2D Games"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#2196F3" />
                                                <Label Text="Exploring the use of mathematics and programming to procedurally generate randomized levels in 2D video games. Students develop dungeon crawler games using Unity and Godot engines to compare Brute Force and Binary Space Partitioning (BSP) algorithms."
                                                       FontSize="12"
                                                       TextColor="#CCCCCC"
                                                       LineBreakMode="WordWrap" />
                                                <Label Text="Engines: Unity &amp; Godot | Focus: Undergraduate Research"
                                                       FontSize="10"
                                                       TextColor="#FF9800"
                                                       FontAttributes="Italic" />
                                            </VerticalStackLayout>
                                        </Frame>

                                        <Frame BackgroundColor="#2A2F3A"
                                               CornerRadius="6"
                                               Padding="12"
                                               HasShadow="False">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Data Visualization &amp; User Experience"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#9C27B0" />
                                                <Label Text="Bridging video game development, mathematics, and visualization of actionable insights from large, high-dimensional datasets. Focus on enhancing user experience and improving computational efficiency in interactive digital environments."
                                                       FontSize="12"
                                                       TextColor="#CCCCCC"
                                                       LineBreakMode="WordWrap" />
                                                <Label Text="Focus: Interdisciplinary Collaboration | Impact: Industry-Relevant"
                                                       FontSize="10"
                                                       TextColor="#FF9800"
                                                       FontAttributes="Italic" />
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Frame>

                                <!-- Research Impact -->
                                <Frame BackgroundColor="#1C2028"
                                       CornerRadius="8"
                                       Padding="15"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="10">
                                        <Label Text="Research Impact &amp; Student Development"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        
                                        <Frame BackgroundColor="#2A2F3A"
                                               CornerRadius="6"
                                               Padding="12"
                                               HasShadow="False">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Undergraduate Research Leadership"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="White" />
                                                <Label Text="Leads an undergraduate research group emphasizing hands-on experience with industry-relevant projects, helping students build strong, competitive résumés for the fast-paced software engineering workforce."
                                                       FontSize="12"
                                                       TextColor="#CCCCCC"
                                                       LineBreakMode="WordWrap" />
                                                <Label Text="Focus: Real-world Problem Solving &amp; Innovation"
                                                       FontSize="10"
                                                       TextColor="#4CAF50" />
                                            </VerticalStackLayout>
                                        </Frame>

                                        <Frame BackgroundColor="#2A2F3A"
                                               CornerRadius="6"
                                               Padding="12"
                                               HasShadow="False">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Algorithm Comparison Research"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="White" />
                                                <Label Text="Brute Force method produces more natural, human-like level designs enhancing immersion and player comfort, while BSP method creates structured, mathematically precise environments with greater computational efficiency."
                                                       FontSize="12"
                                                       TextColor="#CCCCCC"
                                                       LineBreakMode="WordWrap" />
                                                <Label Text="Contribution: Game Development &amp; Computational Mathematics"
                                                       FontSize="10"
                                                       TextColor="#2196F3" />
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Frame>

                                <!-- Research Gallery -->
                                <Frame BackgroundColor="#1C2028"
                                       CornerRadius="8"
                                       Padding="15"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="15">
                                        <Label Text="Research Gallery"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        
                                        <Label Text="Visual highlights from Dr. Lavergne's game development and VR research"
                                               FontSize="12"
                                               TextColor="#CCCCCC" />
                                        
                                        <!-- Faculty Research Gallery Images -->
                                        <CollectionView x:Name="ResearchGalleryCollection"
                                                       ItemsSource="{Binding ResearchImages}"
                                                       ItemsLayout="VerticalGrid, 3"
                                                       HeightRequest="200">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Frame BackgroundColor="#2A2F3A"
                                                           CornerRadius="8"
                                                           Padding="10"
                                                           HasShadow="False">
                                                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                                            <Image Source="{Binding ImageUrl}"
                                                                   Aspect="AspectFill"
                                                                   HeightRequest="80" />
                                                            <Label Text="{Binding Caption}"
                                                                   FontSize="10"
                                                                   TextColor="#CCCCCC"
                                                                   HorizontalOptions="Center" />
                                                        </VerticalStackLayout>
                                                    </Frame>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                            
                                            <!-- Empty state when no images -->
                                            <CollectionView.EmptyView>
                                                <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                                                    <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                        <Label Text="🔬"
                                                               FontSize="30"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               TextColor="#4CAF50" />
                                                    </Frame>
                                                    <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                        <Label Text="🎮"
                                                               FontSize="30"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               TextColor="#2196F3" />
                                                    </Frame>
                                                    <Frame Grid.Row="0" Grid.Column="2" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                        <Label Text="📊"
                                                               FontSize="30"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               TextColor="#FF9800" />
                                                    </Frame>
                                                    <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                        <Label Text="🎓"
                                                               FontSize="30"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               TextColor="#E91E63" />
                                                    </Frame>
                                                    <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                        <Label Text="🔍"
                                                               FontSize="30"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               TextColor="#9C27B0" />
                                                    </Frame>
                                                    <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                        <Label Text="💻"
                                                               FontSize="30"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               TextColor="#607D8B" />
                                                    </Frame>
                                                </Grid>
                                            </CollectionView.EmptyView>
                                        </CollectionView>
                                    </VerticalStackLayout>
                                </Frame>

                                <!-- Contact Information -->
                                <Frame BackgroundColor="#1C2028"
                                       CornerRadius="8"
                                       Padding="20"
                                       HasShadow="False">
                                    <VerticalStackLayout Spacing="15">
                                        <Label Text="Contact Information"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center" />
                                        
                                        <VerticalStackLayout Spacing="12">
                                            <!-- Office Location -->
                                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                                                <VerticalStackLayout Spacing="3">
                                                    <Label Text="Office Location"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="#4CAF50"
                                                           HorizontalOptions="Center" />
                                                    <Label Text="Drew Hall, Room 201"
                                                           FontSize="16"
                                                           TextColor="White"
                                                           HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>

                                            <!-- Phone -->
                                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                                                <Label Text="📞" FontSize="18" VerticalOptions="Center" />
                                                <VerticalStackLayout Spacing="3">
                                                    <Label Text="Phone"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="#2196F3"
                                                           HorizontalOptions="Center" />
                                                    <Label Text="(337) 475-5852"
                                                           FontSize="16"
                                                           TextColor="White"
                                                           HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>

                                            <!-- Office Hours -->
                                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                                                <VerticalStackLayout Spacing="3">
                                                    <Label Text="Office Hours"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="#FF9800"
                                                           HorizontalOptions="Center" />
                                                    <Label Text="Mon, Wed, Fri: 10:00 AM - 12:00 PM"
                                                           FontSize="16"
                                                           TextColor="White"
                                                           HorizontalOptions="Center" />
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </VerticalStackLayout>
                                </Frame>
                            </VerticalStackLayout>
                        </Frame>

                    </VerticalStackLayout>
                </Frame>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
