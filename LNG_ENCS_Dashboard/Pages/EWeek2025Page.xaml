<?xml version="1.0" encoding="utf-8" ?>
<!---Code written by Prajeet Bohara
This code file gives UI for the EWeek 2025 page-->
<ContentPage
    x:Class="Dashboard.Pages.EWeek2025Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Dashboard.Controls"
    Title="E-Week 2025">

    <Grid RowDefinitions="Auto,*">
        <!-- Global TopBar -->
        <controls:TopBar Grid.Row="0" />
        
        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="1">
                <!-- Back Button and Page Header -->
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Start">
                    <Button Text="← Back to E-Week"
                            BackgroundColor="#2A2F3A"
                            TextColor="White"
                            CornerRadius="8"
                            Padding="15,8"
                            FontSize="14"
                            Clicked="OnBackButtonClicked" />
                </HorizontalStackLayout>
                
                <!-- Page Header -->
                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                    <Label Text="🎯"
                           FontSize="40"
                           VerticalOptions="Center" />
                    <VerticalStackLayout Spacing="5">
                        <Label Text="E-Week 2025"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label Text="Venue: Drew Hall McNeese Campus"
                               FontSize="16"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                        <Label Text="Current Year Events &amp; Activities"
                               FontSize="16"
                               TextColor="#4CAF50"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                
                <!-- E-Week 2025 Content -->
                    <VerticalStackLayout Spacing="20">
                        
                        <!-- Event Summary -->
                    <Frame BackgroundColor="#1C2028"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="📊 Summary"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White" />

                            <Label Text="March 17-21, 2025"
                                       FontSize="16"
                                       TextColor="#4CAF50"
                                       FontAttributes="Bold" />

                            <HorizontalStackLayout Spacing="30" HorizontalOptions="Center">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="1,500+"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#4CAF50"
                                               HorizontalOptions="Center" />
                                    <Label Text="Participants"
                                               FontSize="12"
                                               TextColor="#CCCCCC"
                                               HorizontalOptions="Center" />
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="50"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#2196F3"
                                               HorizontalOptions="Center" />
                                    <Label Text="Events"
                                               FontSize="12"
                                               TextColor="#CCCCCC"
                                               HorizontalOptions="Center" />
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="15"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="#FF9800"
                                               HorizontalOptions="Center" />
                                    <Label Text="Competitions"
                                               FontSize="12"
                                               TextColor="#CCCCCC"
                                               HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <Label Text="E-Week 2025 promises to be our biggest and most exciting year yet! With expanded competitions, world-class speakers, and innovative student projects, this year's event will showcase the future of engineering."
                                       FontSize="14"
                                       TextColor="#CCCCCC"
                                       LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>
                        
                        <!-- Photo Gallery Preview -->
                        <Frame BackgroundColor="#1C2028"
                               CornerRadius="12"
                               Padding="20"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="15">
                                <Label Text="📸 Event Gallery"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                
                                <Label Text="Highlights from E-Week 2025"
                                       FontSize="14"
                                       TextColor="#CCCCCC" />
                                
                                <!-- Gallery Images from Supabase -->
                                <CollectionView ItemsSource="{Binding GalleryImages}"
                                                ItemsLayout="VerticalGrid, 3"
                                                HeightRequest="600">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="#2A2F3A" 
                                                   CornerRadius="8" 
                                                   Padding="5"
                                                   Margin="5"
                                                   HasShadow="False">
                                                <Image Source="{Binding ImageUrl}" 
                                                       Aspect="AspectFill"
                                                       HeightRequest="300" />
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                    
                                    <!-- Empty state when no images -->
                                    <CollectionView.EmptyView>
                                        <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                                            <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                <Label Text="🏆"
                                                       FontSize="30"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       TextColor="#FFD700" />
                                            </Frame>
                                            <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                <Label Text="🔬"
                                                       FontSize="30"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       TextColor="#4CAF50" />
                                            </Frame>
                                            <Frame Grid.Row="0" Grid.Column="2" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                <Label Text="🎉"
                                                       FontSize="30"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       TextColor="#2196F3" />
                                            </Frame>
                                            <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                <Label Text="🎤"
                                                       FontSize="30"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       TextColor="#FF9800" />
                                            </Frame>
                                            <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                <Label Text="👥"
                                                       FontSize="30"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       TextColor="#E91E63" />
                                            </Frame>
                                            <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="#2A2F3A" CornerRadius="8" Padding="20">
                                                <Label Text="🚀"
                                                       FontSize="30"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       TextColor="#9C27B0" />
                                            </Frame>
                                        </Grid>
                                    </CollectionView.EmptyView>
                                </CollectionView>
                                
                                <Label Text="Tap to view full gallery →"
                                       FontSize="14"
                                       TextColor="#FF9800"
                                       HorizontalOptions="Center"
                                       FontAttributes="Italic" />
                            </VerticalStackLayout>
                        </Frame>
                        
  


                        
                    </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
